<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog - Programming Articles</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
            background-color: #f8f9fa;
            line-height: 1.6;
        }
        .header {
            text-align: center;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 40px 20px;
            border-radius: 10px;
            margin-bottom: 30px;
        }
        .header h1 {
            margin: 0;
            font-size: 2.5em;
        }
        .header p {
            margin: 10px 0 0 0;
            opacity: 0.9;
        }
        .nav-link {
            display: inline-block;
            background-color: rgba(255,255,255,0.2);
            color: white;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 5px;
            margin-top: 20px;
            transition: background-color 0.3s;
        }
        .nav-link:hover {
            background-color: rgba(255,255,255,0.3);
        }
        .container {
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            margin-bottom: 30px;
        }
        .section h2 {
            color: #333;
            border-bottom: 3px solid #667eea;
            padding-bottom: 10px;
            margin-bottom: 20px;
        }
        .generate-form textarea {
            width: 100%;
            min-height: 200px;
            padding: 15px;
            border: 2px solid #e9ecef;
            border-radius: 8px;
            font-family: monospace;
            font-size: 14px;
            resize: vertical;
            margin-bottom: 15px;
        }
        .generate-form .help-text {
            color: #666;
            font-size: 14px;
            margin-bottom: 15px;
        }
        button {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 12px 24px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-size: 16px;
            font-weight: 600;
            transition: transform 0.2s;
        }
        button:hover {
            transform: translateY(-2px);
        }
        button:disabled {
            background: #ccc;
            cursor: not-allowed;
            transform: none;
        }
        .articles-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
            gap: 20px;
            margin-top: 30px;
        }
        .article-card {
            background: white;
            border: 1px solid #e9ecef;
            border-radius: 8px;
            padding: 20px;
            transition: transform 0.2s, box-shadow 0.2s;
            text-decoration: none;
            color: inherit;
            display: block;
        }
        .article-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
        }
        .article-title {
            font-size: 18px;
            font-weight: 600;
            color: #333;
            margin-bottom: 10px;
            line-height: 1.3;
        }
        .article-date {
            color: #666;
            font-size: 14px;
            margin-bottom: 15px;
        }
        .article-excerpt {
            color: #555;
            font-size: 14px;
            line-height: 1.5;
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }
        .status {
            padding: 15px;
            border-radius: 6px;
            margin: 15px 0;
            font-weight: 500;
        }
        .success {
            background-color: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }
        .error {
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }
        .info {
            background-color: #d1ecf1;
            color: #0c5460;
            border: 1px solid #bee5eb;
        }
        .empty-state {
            text-align: center;
            color: #666;
            padding: 40px;
        }
        .empty-state h3 {
            margin-bottom: 10px;
        }
        .generated-articles {
            margin-top: 25px;
        }
        .generated-article {
            border: 1px solid #e9ecef;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 20px;
            background: #fdfdff;
            box-shadow: 0 2px 6px rgba(0,0,0,0.05);
        }
        .generated-article h3 {
            margin-top: 0;
            margin-bottom: 10px;
            color: #333;
        }
        .generated-article pre {
            background: #f8f9fa;
            border: 1px solid #e2e6ea;
            border-radius: 6px;
            padding: 15px;
            white-space: pre-wrap;
            word-wrap: break-word;
            font-size: 14px;
        }
        .generated-article-actions {
            margin-top: 12px;
            display: flex;
            justify-content: flex-end;
        }
        .generated-article-actions a {
            color: #667eea;
            text-decoration: none;
            font-weight: 600;
        }
        .generated-article-actions a:hover {
            text-decoration: underline;
        }
        .loading-spinner {
            display: inline-block;
            width: 20px;
            height: 20px;
            border: 3px solid rgba(255,255,255,.3);
            border-radius: 50%;
            border-top-color: #fff;
            animation: spin 1s ease-in-out infinite;
            margin-right: 10px;
            vertical-align: middle;
        }
        @keyframes spin {
            to { transform: rotate(360deg); }
        }
        .loading-status {
            display: flex;
            align-items: center;
            gap: 10px;
        }
        .progress-indicator {
            font-size: 14px;
            color: #666;
            margin-top: 10px;
        }
        @media (max-width: 768px) {
            .articles-grid {
                grid-template-columns: 1fr;
            }
            .header h1 {
                font-size: 2em;
            }
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>üìù Programming Blog</h1>
        <p>AI-Generated Articles on Programming Topics</p>
        <a href="/" class="nav-link">‚Üê Back to Autodialer</a>
    </div>

    <div class="container">
        <div class="section">
            <h2>Generate New Articles</h2>
            <p>Enter article titles (one per line) and our AI will generate comprehensive programming articles for you.</p>

            <form class="generate-form" onsubmit="generateArticles(event)">
                <textarea id="articleTitles" placeholder="Enter article titles, one per line:

Introduction to Ruby Metaprogramming
Understanding React Hooks
Building REST APIs with Node.js
Docker Containerization for Developers
Machine Learning with Python"></textarea>
                <div class="help-text">
                    üí° Tip: Include specific programming topics, frameworks, or concepts you want articles about.
                </div>
                <button type="submit" id="generateBtn">Generate Articles with AI</button>
                <div id="generateStatus"></div>
            </form>
        </div>
    </div>

    <div class="container" id="generatedArticlesContainer" style="display: none;">
        <div class="section">
            <h2>Latest AI Output</h2>
            <p>Review the freshly generated articles below. Click the link to open the full blog page.</p>
            <div class="generated-articles" id="generatedArticles"></div>
        </div>
    </div>

    <div class="container">
        <div class="section">
            <h2>Published Articles (<span id="articleCount"><%= @articles.length %></span>)</h2>

            <div class="empty-state" id="emptyState" style="<%= @articles.empty? ? '' : 'display:none;' %>">
                <h3>No articles yet</h3>
                <p>Generate your first programming articles using the form above!</p>
            </div>

            <div class="articles-grid" id="articlesGrid" style="<%= @articles.empty? ? 'display:none;' : '' %>">
                <% @articles.each do |article| %>
                    <% excerpt = article.content.to_s.split(/\n+/).reject(&:empty?).first(3)&.join(' ') || '' %>
                    <a href="/blog/<%= article.slug %>" class="article-card">
                        <div class="article-title"><%= article.title %></div>
                        <div class="article-date"><%= article.created_at.strftime('%B %d, %Y') %></div>
                        <div class="article-excerpt"><%= excerpt %></div>
                    </a>
                <% end %>
            </div>
        </div>
    </div>

    <script>
        async function generateArticles(event) {
            event.preventDefault();

            const titles = document.getElementById('articleTitles').value.trim();
            if (!titles) {
                showStatus('generateStatus', 'Please enter at least one article title', 'error');
                return;
            }

            const btn = document.getElementById('generateBtn');
            const originalText = btn.textContent;
            btn.disabled = true;
            btn.innerHTML = '<span class="loading-spinner"></span>Generating Articles...';

            // Show initial loading status
            const titleList = titles.split('\n').filter(t => t.trim()).length;
            showStatus('generateStatus', 
                `<div class="loading-status">
                    <span class="loading-spinner"></span>
                    <span>Generating ${titleList} article(s) with AI... This may take a moment.</span>
                </div>`, 
                'info');

            try {
                const response = await fetch('/blog/generate', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                    },
                    body: `titles=${encodeURIComponent(titles)}`
                });

                const result = await response.json();

                if (result.success) {
                    let statusMsg = `‚úÖ Successfully generated ${result.count} article(s)!`;
                    
                    // Check if any articles used fallback model
                    if (result.articles && result.articles.some(a => a.fallback)) {
                        statusMsg += '<br><small style="color: #856404;">‚ö†Ô∏è Some articles were generated using fallback model (2.5-pro) due to high load.</small>';
                    }
                    
                    if (result.errors && result.errors.length > 0) {
                        statusMsg += ` (${result.errors.length} failed)`;
                    }
                    showStatus('generateStatus', statusMsg, result.count > 0 ? 'success' : 'info');
                    
                    if (result.count > 0) {
                        document.getElementById('articleTitles').value = '';
                        renderGeneratedArticles(result.articles);
                        addArticlesToGrid(result.articles);
                    }
                    
                    if (result.errors && result.errors.length > 0) {
                        const errorDetails = document.createElement('div');
                        errorDetails.className = 'status error';
                        errorDetails.style.marginTop = '10px';
                        errorDetails.innerHTML = '<strong>Errors:</strong><br>' + result.errors.join('<br>');
                        document.getElementById('generateStatus').appendChild(errorDetails);
                    }
                } else {
                    showStatus('generateStatus', result.error || 'Failed to generate articles', 'error');
                }
            } catch (error) {
                showStatus('generateStatus', 'Error generating articles. Please try again.', 'error');
            } finally {
                btn.disabled = false;
                btn.innerHTML = originalText;
            }
        }

        function showStatus(elementId, message, type = 'info') {
            const element = document.getElementById(elementId);
            element.className = `status ${type}`;
            element.innerHTML = message;
        }

        function renderGeneratedArticles(articles) {
            if (!articles || articles.length === 0) return;

            const container = document.getElementById('generatedArticlesContainer');
            const list = document.getElementById('generatedArticles');

            const html = articles.map(article => {
                return `
                    <div class="generated-article">
                        <h3>${escapeHtml(article.title)}</h3>
                        <pre>${escapeHtml(article.content)}</pre>
                        <div class="generated-article-actions">
                            <a href="/blog/${encodeURIComponent(article.slug)}" target="_blank" rel="noopener">Open full article ‚Üí</a>
                        </div>
                    </div>
                `;
            }).join('');

            list.innerHTML = html;
            container.style.display = 'block';
        }

        function addArticlesToGrid(articles) {
            if (!articles || articles.length === 0) return;

            const grid = document.getElementById('articlesGrid');
            const emptyState = document.getElementById('emptyState');
            const countEl = document.getElementById('articleCount');

            if (emptyState) {
                emptyState.style.display = 'none';
            }

            if (grid) {
                grid.style.display = 'grid';

                articles.forEach(article => {
                    const card = document.createElement('a');
                    card.className = 'article-card';
                    card.href = `/blog/${article.slug}`;
                    card.innerHTML = `
                        <div class="article-title">${escapeHtml(article.title)}</div>
                        <div class="article-date">${formatDate(article.created_at)}</div>
                        <div class="article-excerpt">${escapeHtml(createExcerpt(article.content))}</div>
                    `;
                    grid.prepend(card);
                });
            }

            if (countEl) {
                const current = parseInt(countEl.textContent, 10) || 0;
                countEl.textContent = current + articles.length;
            }
        }

        function createExcerpt(content) {
            if (!content) return '';
            const sentences = content.split(/\n+/).filter(Boolean).slice(0, 3);
            return sentences.join(' ').slice(0, 220) + (content.length > 220 ? '‚Ä¶' : '');
        }

        function formatDate(dateString) {
            try {
                const date = new Date(dateString);
                return date.toLocaleDateString(undefined, { year: 'numeric', month: 'long', day: 'numeric' });
            } catch (e) {
                return '';
            }
        }

        function escapeHtml(value) {
            if (value === null || value === undefined) return '';
            const str = String(value);
            return str
                .replace(/&/g, '&amp;')
                .replace(/</g, '&lt;')
                .replace(/>/g, '&gt;')
                .replace(/"/g, '&quot;')
                .replace(/'/g, '&#39;');
        }
    </script>
</body>
</html>
